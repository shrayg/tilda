{
  "name": "saferoute-backend",
  "version": "1.0.0",
  "description": "SafeRoute NYC Safety Data API",
  "main": "api/index.js",
  "scripts": {
    "dev": "tsc && node dist/api/index.js",
    "dev:watch": "tsc --watch & node dist/api/index.js",
